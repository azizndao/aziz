---
import CardListLayout from "~layouts/CardListLayout.astro";
import { getCollection } from "astro:content";

const entries = await getCollection("blog");

const posts = entries.map((post) => ({
    href: `/blog/${post.slug}`,
    date: post.data.date,
    title: post.data.title,
    description: post.data.description,
    tags: post.data.tags,
    cover: post.data.cover,
}));
const title = "Blog";
const description = "Latest news, updates, and stories for developers";
---

<CardListLayout cards={posts} title={title} description={description} />
