---
import Header from "~components/header/Header.astro";
import PortfolioHeader from "~components/portfolio/PortfolioHeader.astro";
import ProjectList from "~components/portfolio/ProjectList.astro";
import SkillList from "~components/portfolio/SkillList.astro";
import BaseLayout from "~layouts/BaseLayout.astro";
---

<BaseLayout
    title="Portfolio"
    description="My name is Abdou Aziz Ndao and this is my personnel website where a make my portfoilio, and courses for web and mobile development and my blog"
>
    <div slot="header"><span></span></div>
    <div class="home content">
        <header><Header /></header>
        <PortfolioHeader />
        <SkillList />
        <ProjectList />
    </div>
</BaseLayout>

<style>
    .home {
        display: flex;
        background-color: black;
        color: lightgray;
        gap: 2rem;
        flex-direction: column;
    }

    header {
        position: sticky;
        z-index: 10;
        top: 0;
        background-color: transparent;
        backdrop-filter: blur(23px) saturate(4.5);
    }
</style>
