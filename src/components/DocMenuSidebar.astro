---
interface Props {
    title?: string;
    entries: {
        title: string;
        slug: string;
    }[];
}
const { title, entries } = Astro.props;
---

<div class="menu">
    <h3>{title ?? "Menu"}</h3>
    <nav>
        <ul>
            {
                entries.map((entry) => (
                    <li>
                        <a
                            href={entry.slug}
                            class:list={{
                                active: entry.slug === Astro.url.pathname,
                            }}
                        >
                            {entry.title}
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>
</div>

<style>
    .menu {
        padding: 0 1rem;
    }

    h3 {
        font-weight: bold;
        line-height: 2;
        padding: 0 1rem;
        @apply mb-8 text-3xl;
    }

    .menu nav ul {
        display: flex;
        flex-direction: column;
        /* gap: 1.5rem; */
    }

    li a {
        padding: 0 1rem;
        display: block;
        text-decoration: none;
        line-height: 2.25;
        width: 100%;
        @apply line-clamp-1;
        border-radius: 6px;
    }

    li a:hover,
    li a.active {
        color: rgb(var(--on-primary-container));
        background-color: rgb(var(--primary-container));
    }
</style>
