---
import SquareStack from "~components/svgs/SquareStack.astro"

interface Props {
  class?: string
}

const { class: cls } = Astro.props
---

<li class:list={["skill", cls]}>
  <slot name="icon">
    <SquareStack />
  </slot>
  <h3><slot /></h3>
  <p><slot name="description" /></p>
</li>

<style is:global>
  .skill {
    max-width: 24rem;
    display: flex;
    width: 100%;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    text-align: center;
    justify-content: flex-end;
  }

  @media (min-width: 1024px) {
    .skill {
      min-width: 350px;
    }
  }

  .skill svg {
    height: 5rem;
    width: 5rem;
    @apply text-primary-500;
  }

  h3 {
    font-weight: 700;
    font-size: 1.5rem;
    line-height: 2rem;
  }
</style>
