---
import type { HTMLAttributes } from "astro/types";
import { twMerge } from "tailwind-merge";
interface Props extends HTMLAttributes<"div"> {
  class?: string;
}
const { class: cls, ...attrs } = Astro.props;
---

<img
  class={twMerge(
    "md:h-full w-full md:w-auto relative rounded-3xl lg:rounded-[3rem] object-cover aspect-[4/5] lg:aspect-[3/5]",
    cls
  )}
  {...attrs}
  src="/images/me.png"
/>

<script>
  const image = document.querySelector(".image-container .image");

  image?.addEventListener("load", (event) => {
    console.log(image);
  });
</script>
