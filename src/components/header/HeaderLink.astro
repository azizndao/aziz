---
interface Props {
  href: string;
  active: boolean;
}
const { href, active } = Astro.props;
---

<a href={href} aria-active={active}>
  <slot />
</a>

<style>
  a[aria-active="true"] {
    text-decoration-thickness: 4px;
    color: var(--color-primary);
    text-decoration: underline;
    font-weight: 600;
  }
</style>
