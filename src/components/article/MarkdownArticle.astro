---
import { twMerge } from "tailwind-merge"
interface Props {
    class?: string
}
---

<article
    class={twMerge(
        "markdown prose prose-slate dark:prose-invert lg:prose-lg prose-pre:w-full prose-headings:text-primary-500 dark:prose-headings:text-primary-400 prose-a:text-primary-500",
        Astro.props.class
    )}
>
    <slot />
</article>

<style is:global>
    .prose :is(h2, h3, h4, h5) {
        position: relative;
    }

    .prose :is(h2, h3, h4, h5) a::before {
        content: "#";
        height: 24px;
        width: 24px;
        stroke-width: 2px;
        inset: 0;
        @apply -left-6 md:-left-8 text-neutral-400 hover:text-primary-500 dark:text-neutral-600 dark:hover:text-primary-400;
        position: absolute;
        display: inline-block;
    }

    .prose * {
        scroll-margin-top: var(--scroll-margin-top);
    }

    * {
        scroll-behavior: smooth;
    }
</style>
