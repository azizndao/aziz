---
interface Props {
    class?: string;
}
---

<article class:list={["markdown", Astro.props.class]}>
    <slot />
</article>

<style is:global>
    .markdown {
        margin-bottom: 3rem;
    }

    .markdown a {
        color: rgba(var(--primary));
        text-decoration: underline;
    }

    .markdown blockquote {
        background: rgba(var(--primary-container));
        padding: 20px 13px 20px 10px;
        border-left: 10px solid #ac7ef4;
        margin: 30px 0;
    }

    .markdown blockquote p:first-child {
        margin-top: 0;
    }

    .markdown blockquote p:last-child {
        margin-bottom: 0;
    }

    .markdown a:hover {
        text-decoration: none;
    }

    .markdown h1 {
        margin: 1.75rem 0;
        position: relative;
        line-height: 1.2;
        font-size: 55px;
        font-weight: 600;
        scroll-margin-top: var(--scroll-margin-top);
    }

    .markdown h2,
    .markdown h3,
    .markdown h4,
    .markdown h5,
    .markdown h6 {
        font-weight: 500;
        position: relative;
        font-size: 1.25rem;
        line-height: 1.75rem;
        margin-top: 1.2em;
        scroll-margin-top: var(--scroll-margin-top);
        margin-bottom: max(0.7em, 18px);
    }

    .markdown h2 {
        line-height: 1.2;
        font-size: 42px;
        font-weight: 500;
        scroll-margin-top: var(--scroll-margin-top);
        margin-top: 45px;
    }

    .markdown h3 {
        font-size: 1.8rem;
    }

    .markdown h2 a,
    .markdown h3 a,
    .markdown h4 a,
    .markdown h5 a,
    .markdown h6 a {
        /* position: absolute; */
        /* width: 100%; */
        height: 1em;
    }

    .icon-link {
        display: none;
    }

    .icon-link::after {
        position: absolute;
        content: "#";
        left: 0.5em;
        font-weight: 400;
    }

    h2 a:hover .icon,
    h3 a:hover .icon,
    h4 a:hover .icon,
    h5 a:hover .icon,
    h6 a:hover .icon {
        display: inline;
    }

    .markdown p {
        margin-top: 1.6rem;
        margin-bottom: 0.9rem;
        font-size: 16px;
        font-weight: 400;
        line-height: 1.7;
        color: rgb(var(--on-background));
    }

    .markdown ul,
    .markdown ol {
        margin: 1rem 2.5rem 0;
        line-height: 1.7;
        list-style: disc;

        font-size: 16px;
        font-weight: 400;
        color: rgb(var(--on-background));
    }

    .markdown ol {
        list-style: decimal;
    }

    .markdown li {
        padding-bottom: 0.5rem;
        margin: 0.25rem 0;
    }

    .markdown li::marker,
    .markdown li::-webkit-details-marker {
        color: rgb(var(--primary));
        font-weight: 800;
    }

    [data-rehype-pretty-code-fragment] {
        overflow: auto;
        color: white;
        background-color: rgb(1 31 51);
        border-radius: 8px;
        margin: 20px 0;
    }

    [data-rehype-pretty-code-fragment] pre {
        overflow: auto;
        border-radius: 8px;
        max-height: var(--pretty-code-fragment-max-height);
    }

    [data-rehype-pretty-code-title] {
        padding: 5px 15px;
        background: #4199d3;
        font-family: monospace;
        font-weight: bold;
    }

    .markdown pre {
        padding: 18px 15px;
        overflow: auto;
        border-radius: 0.5rem;
    }

    :root {
        --code-line-height: 24px;
    }

    .markdown pre code {
        display: grid;
        counter-reset: line;
        background-color: transparent;
        border: none;
        user-select: auto;
        line-height: 1.28;
    }

    .markdown code {
        background-color: rgba(var(--surface-variant), 1);
        padding: 2px 4px;
        border-radius: 3px;
        font-size: 0.9em;
        border-bottom: 2px solid rgba(var(--outline), 0.5);
        user-select: all;
    }

    @media (max-width: 640px) {
        .markdown code {
            word-break: break-all;
        }

        .markdown h1 {
            font-size: 40px;
        }

        .markdown h2 {
            font-size: 30px;
        }
    }

    .markdown table {
        margin: 1.25rem 0;
    }

    .markdown th,
    .markdown td {
        padding: 6px;
        vertical-align: top;
    }

    .markdown th:first-child,
    .markdown td:first-child {
        padding-left: 0;
    }

    .markdown th:last-child,
    .markdown td:last-child {
        padding-right: 0;
    }

    .markdown img {
        border-radius: 5px;
        overflow: hidden;
    }
</style>
