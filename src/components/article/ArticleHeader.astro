---
import Image from "astro/components/Image.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
    entry: CollectionEntry<"blog">;
}

const { entry } = Astro.props;
---

<h1>{entry.data.title}</h1>

<Image
    src={entry.data.cover ?? ""}
    alt={entry.data.title}
    height={512}
    width={(512 * 16) / 9}
/>

<section class="author">
    <Image
        src="/favicon.png"
        height={200}
        width={200}
        alt={entry.data.author}
        class="avatar"
    />
    <h6>{entry.data.author}</h6>
    <small>{entry.data.date.toDateString()}</small>
</section>

<style>
    .author {
        display: grid;
        flex-direction: column;
        grid-template: 1fr 1fr / 56px 1fr;
        align-items: center;
        column-gap: 1rem;
        margin-top: 1.5rem;
    }

    .author .avatar {
        grid-column: 1;
        grid-row: 1 / 3;
        border-radius: 48px;
        height: 56px;
        width: 56px;
    }

    .author > h6 {
        margin: 0 !important;
        padding: 0 !important;
        grid-column: 2;
    }

    .author small {
        font-size: 0.75rem;
        font-weight: 500;
        grid-area: 2 / 2;
    }
</style>
