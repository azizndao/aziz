---
import type { MarkdownHeading } from "astro";

interface Props {
  headings: MarkdownHeading[];
}

const headings = Astro.props.headings.filter((heading) => heading.depth > 1);
---

<section class="toc">
  <h3>Table of Contents</h3>
  <ul>
    {
      headings.map((heading) => (
        <li class={`heading heading-${heading.depth}`}>
          <a href={`#${heading.slug}`}>{heading.text}</a>
        </li>
      ))
    }
  </ul>
</section>

<script>
  const headings = document.querySelectorAll(".markdown :is(h2,h3,h4,h5,h6)");

  const headingLinks: NodeListOf<HTMLAnchorElement> =
    document.querySelectorAll(".toc .heading a");

  const callback = (entries: IntersectionObserverEntry[]): void => {
    entries = entries
      .filter((a) => a.isIntersecting)
      .sort((a, b) => a.intersectionRatio - b.intersectionRatio);
    const entry = entries[0];
    if (entry) {
      headingLinks.forEach((link) => {
        if (link.href.includes(entry.target.id)) {
          link.classList.add("active");
        } else {
          link.classList.remove("active");
        }
      });
    }
  };

  const observer = new IntersectionObserver(callback, {
    root: document,
    rootMargin: "0px 80px 0px 80px",
  });

  headings.forEach((heading) => {
    observer.observe(heading);
  });
</script>

<style>
  .toc {
    padding: 0 1rem;
  }

  .toc h3 {
    font-size: 1.25rem;
    font-weight: bold;
    line-height: 2;
    padding-bottom: 1rem;
  }

  li a {
    display: block;
    text-decoration: none;
    line-height: 2.25;
    @apply border-l-[2px] border-l-primary-300 line-clamp-1;
  }

  li a:hover {
    @apply text-primary-600 bg-primary-50 dark:bg-primary-500/10 border-primary-300;
  }

  li a.active {
    @apply text-primary-400 font-medium bg-primary-100 dark:bg-primary-600/5 border-primary-500;
  }

  .toc .heading-2 a {
    font-size: 1rem;
    padding-left: 0.75rem;
  }

  .toc .heading-3 a {
    font-size: 0.9rem;
    padding-left: 2rem;
    text-overflow: ellipsis;
    line-clamp: 1;
    max-lines: 1;
  }

  .toc .heading-4 a {
    font-size: 1rem;
    padding-left: 3rem;
  }
</style>
