---
import type { MarkdownHeading } from "astro";

interface Props {
    headings: MarkdownHeading[];
}

const headings = Astro.props.headings.filter((heading) => heading.depth > 1);
---

<section class="toc">
    <h3>Table of Contents</h3>
    <ul>
        {
            headings.map((heading) => (
                <li class={`heading heading-${heading.depth}`}>
                    <a href={`#${heading.slug}`}>{heading.text}</a>
                </li>
            ))
        }
    </ul>
</section>

<script>
    const headings = document.querySelectorAll(".markdown :is(h2,h3,h4,h5,h6)");

    const headingLinks: NodeListOf<HTMLAnchorElement> =
        document.querySelectorAll(".toc .heading a");

    const callback = (entries: IntersectionObserverEntry[]): void => {
        entries = entries
            .filter((a) => a.target.id !== "" && a.isIntersecting)
            .sort((a, b) => a.intersectionRatio - b.intersectionRatio);

        const entry = entries[0];

        if (entry) {
            headingLinks.forEach((link) => {
                if (link.href.includes(entry.target.id)) {
                    link.classList.add("active");
                } else {
                    link.classList.remove("active");
                }
            });
        }
    };

    const observer = new IntersectionObserver(callback, {
        root: document,
        rootMargin: "0px 80px 0px 80px",
    });

    headings.forEach((heading) => {
        observer.observe(heading);
    });
</script>

<style>
    .toc {
        padding: 0 1rem;
    }

    .toc h3 {
        font-size: 1.25rem;
        font-weight: bold;
        line-height: 2;
        padding-bottom: 1rem;
    }

    .toc ul {
        display: flex;
        flex-direction: column;
        /* border-left: 1px solid rgb(var(--primary)); */
        /* padding-left: 0.5rem; */
    }

    li a {
        display: block;
        text-decoration: none;
        line-height: 2.25;
        border-left: 1px solid rgb(var(--on-surface), 0.25);
        padding-left: 1rem;
    }

    li a:hover {
        background-color: rgba(var(--primary), 0.05);
    }

    li a.active {
        color: rgba(var(--primary));
        border-left: 2px solid rgba(var(--primary));
        font-weight: 500;
    }

    .toc .heading-2 a {
        font-size: 1rem;
        padding-left: 1.25rem;
    }

    .toc .heading-3 a {
        font-size: 0.9rem;
        padding-left: 2rem;
        text-overflow: ellipsis;
        line-clamp: 1;
        max-lines: 1;
    }

    .toc .heading-4 a {
        font-size: 1rem;
        padding-left: 3rem;
    }
</style>
